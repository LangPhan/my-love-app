# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Appwrite Configuration
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_appwrite_project_id
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
# For self-hosted: NEXT_PUBLIC_APPWRITE_ENDPOINT=https://your-appwrite-domain.com/v1

# Appwrite API Key (Server-side only - never expose to client)
APPWRITE_API_KEY=your_server_api_key

# PWA Push Notifications (VAPID Keys)
# Generate these keys with: npx web-push generate-vapid-keys
# Required for push notifications to work
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:your-email@example.com

# Database IDs (create these in Appwrite console)
NEXT_PUBLIC_DATABASE_ID=love_app_db
NEXT_PUBLIC_MESSAGES_COLLECTION_ID=messages
NEXT_PUBLIC_MEMORIES_COLLECTION_ID=memories  
NEXT_PUBLIC_TODOS_COLLECTION_ID=todos
NEXT_PUBLIC_USERS_COLLECTION_ID=users

# Storage Bucket IDs (create these in Appwrite console)
NEXT_PUBLIC_MEMORIES_BUCKET_ID=memories_bucket
NEXT_PUBLIC_AVATARS_BUCKET_ID=avatars_bucket

# App Configuration
NEXT_PUBLIC_APP_NAME="Love App"
NEXT_PUBLIC_APP_URL=https://your-love-app.com

# Development Settings
NODE_ENV=development

# Production Security (for production deployment)
# NEXTAUTH_SECRET=your_nextauth_secret_here
# NEXTAUTH_URL=https://your-love-app.com