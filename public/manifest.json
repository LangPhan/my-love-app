{
  "name": "Love App - Stay Connected with Your Partner",
  "short_name": "Love App",
  "description": "A romantic Progressive Web App for couples to chat, share memories, and manage shared todos together.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#fdf2f8",
  "theme_color": "#ec4899",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",

  "icons": [
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/favicon-32x32.png",
      "sizes": "32x32",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/favicon-16x16.png",
      "sizes": "16x16",
      "type": "image/png",
      "purpose": "any"
    }
  ],

  "categories": ["lifestyle", "social", "communication"],

  "screenshots": [
    {
      "src": "/screenshots/desktop-chat.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Chat with your partner in real-time"
    },
    {
      "src": "/screenshots/mobile-memories.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Browse your shared memories timeline"
    }
  ],

  "shortcuts": [
    {
      "name": "Chat",
      "short_name": "Chat",
      "description": "Open chat with your partner",
      "url": "/chat",
      "icons": [
        {
          "src": "/icons/shortcut-chat.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Memories",
      "short_name": "Memories",
      "description": "View shared memories",
      "url": "/memories",
      "icons": [
        {
          "src": "/icons/shortcut-memories.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Todos",
      "short_name": "Todos",
      "description": "Check shared todo list",
      "url": "/todos",
      "icons": [
        {
          "src": "/icons/shortcut-todos.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],

  "related_applications": [],
  "prefer_related_applications": false,

  "share_target": {
    "action": "/memories/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "video/*"]
        }
      ]
    }
  },

  "protocol_handlers": [
    {
      "protocol": "web+loveapp",
      "url": "/?handler=%s"
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  }
}
